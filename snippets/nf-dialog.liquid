  const accountNotif = (isError = false) => {
    const notifId = isError ? 'account-drawer-notif-error' : 'account-drawer-notif';
    const notif = document.getElementById(notifId);
    notif.className = 'show';
    setTimeout(() => notif.className = '', 1000);
