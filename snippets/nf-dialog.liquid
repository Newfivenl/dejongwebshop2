      quantitySpinnerElem(quantitySpinners, ".orderlist-minus__button", ".orderlist-plus__button", ".orderlist-quantity__input", ".orderlist-re-order-btn", ".sub-display-added-quantity");
      updateSubtotal(quantitySpinners);
